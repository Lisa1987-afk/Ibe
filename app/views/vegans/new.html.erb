
<div class="adam">
<%= t(".love_html")%>

<%= form_for @vegan do |f| %>

  <div class="field">
 
    <ul >
        <li>
          <%= f.label :name %>
          <%= f.text_field :name, style: "width: 200px; height: 40px;" %>
        </li>
        <li>
          <%= f.label :genre %>
          <%= f.select :genre, 
          [["ベジタリアン料理", "ベジタリアン料理"], 
          ["グルテンフリー料理", "グルテンフリー料理"], 
          ["オーガニック料理", "オーガニック料理"],
          ["ファーストフード", "ファーストフード"], 
          ["ファインダイニング", "ファインダイニング"],
          ["カフェ・喫茶店", "カフェ・喫茶店"], 
          ["ベジタリアンバーガー専門店", "ベジタリアンバーガー専門店"],
          ["イタリアン", "イタリアン"], 
          ["メキシコ料理", "メキシコ料理"],
          ["アジア料理", "アジア料理"]], {include_blank: "選択して下さい/Select"} ,{ style: "width: 200px; height: 40px;"}%>
        </li>
   
        <li>
          <%= f.label :price %>
          <%= f.number_field :price,  style: "width: 200px; height: 40px;" %>yen
        </li>

        <li>
          <%= f.label :adress %>
          <%= f.select :adress, 
          [["大阪", "大阪"], 
          ["京都", "京都"], 
          ["兵庫", "兵庫"],
        ["奈良", "奈良"]],{include_blank: "選択して下さい/Select" },{style: "width: 200px; height: 40px;" }%>
        </li>

        <li>
          <%= f.label :about %>
          <%= f.text_area :about, style: "width: 200px; height: 40px; margin-top:10px;" %>
        </li>
   
      <li>
          <%= t(".rating_html")%>
            <div class="post_form">
                <%= f.radio_button :overall, 5 ,id: 'star1'%>
                <label for="star1"><span class="text"><%= t(".excellent_html")%></span>★</label>
            
                <%= f.radio_button :overall, 4 ,id: 'star2'%>
                <label for="star2"><span class="text"><%= t(".good_html")%></span>★</label>
            
                <%= f.radio_button :overall, 3 ,id: 'star3'%>
                <label for="star3"><span class="text"><%= t(".average_html")%></span>★</label>
            
                <%= f.radio_button :overall, 2 ,id: 'star4'%>
                <label for="star4"><span class="text"><%= t(".bad_html")%></span>★</label>
            
                <%= f.radio_button :overall, 1 ,id: 'star5'%>
                <label for="star5"><span class="text"><%= t(".terrible_html")%></span>★</label>
            
            </div>
        </li>

      

     <%= submit_tag t("submit_button.post")%>
<% end %>
 

  <%= link_to t('links.list'), vegans_path %>
  </div>
  </ul>
</div>

<script type="text/javascript">
       $("#post_image_top, #post_images").bind("change", function() {
         var size_in_megabytes = this.files[0].size/1024/1024;
         if (size_in_megabytes > 5) {
           alert("Maximum file size is 5MB. Please choose a smaller file.");
           $("#post_image_top").val("");
         }
       });
      </script>

