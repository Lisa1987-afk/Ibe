
<div class="vegan">
<%= t(".about_html")%>

  <p><%= @vegan.about %></p>
  <p><%= @vegan.created_at %></p>


  <div class="image-top">
    <%= image_tag @vegan.resize_image_top if @vegan.image_top.attached? %>
  </div>


    
  </div>

<div class="comment-wrapper">
  <%= t(".comment_html")%>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@vegan, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag t("submit_button.save") %>
       
    <% end %>
  <% end %>

  <%= link_to t('links.edit'), edit_vegan_path(@vegan.id) %>

<%= link_to t('links.list2'), vegans_path %>

</div>

